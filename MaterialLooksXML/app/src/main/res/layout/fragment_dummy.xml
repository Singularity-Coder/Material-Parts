<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    tools:context=".MaterialComponentDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_dummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_50"
            android:padding="64dp"
            android:text="Dummy"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/title_color"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cl_dummy_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/cl_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="item_1,item_2,item_3,item_4,item_5,item_6,item_7,item_8,item_9,item_10"
                app:flow_horizontalGap="8dp"
                app:flow_horizontalStyle="packed"
                app:flow_maxElementsWrap="2"
                app:flow_verticalGap="8dp"
                app:flow_wrapMode="chain"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/item_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_50" />

            <View
                android:id="@+id/item_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_100" />

            <View
                android:id="@+id/item_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_200" />

            <View
                android:id="@+id/item_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_300" />

            <View
                android:id="@+id/item_5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_400" />

            <View
                android:id="@+id/item_6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_500" />

            <View
                android:id="@+id/item_7"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_600" />

            <View
                android:id="@+id/item_8"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_700" />

            <View
                android:id="@+id/item_9"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_800" />

            <View
                android:id="@+id/item_10"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/purple_900" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
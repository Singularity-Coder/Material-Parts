<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_basic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="true"
        android:text="Basic Switch"
        app:useMaterialThemeColors="true" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="true"
        android:minWidth="70dp"
        android:minHeight="50dp"
        android:text="Custom Switch"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/purple_700"
        android:thumb="@drawable/ic_baseline_stars_24"
        app:thumbTint="@color/purple_700"
        app:track="@drawable/ic_baseline_dehaze_24"
        app:trackTint="@color/teal_200"
        app:useMaterialThemeColors="true" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuous Slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_continuous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:value="10.0"
        android:contentDescription="Continuous Slider"
        android:labelFor="@+id/tv_result"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:labelBehavior="floating" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Discrete Slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="Discrete Slider"
        android:labelFor="@+id/tv_result"
        android:value="3.0"
        android:stepSize="1.0"
        android:valueFrom="0.0"
        android:valueTo="10.0"
        app:labelBehavior="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Continuous Range Selection Slider" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider_continuous_range_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="Continuous Range Selection Slider"
        android:labelFor="@+id/tv_result"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:values="@array/initial_continuous_slider_values" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Discrete Range Selection Slider" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider_discrete_range_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="Discrete Range Selection Slider"
        android:labelFor="@+id/tv_result"
        android:stepSize="1"
        android:valueFrom="0.0"
        android:valueTo="10.0"
        app:values="@array/initial_discrete_slider_values" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Custom Slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="Custom Slider"
        android:labelFor="@+id/tv_result"
        android:value="10.0"
        android:stepSize="5.0"
        android:valueFrom="5.0"
        android:valueTo="50.0"
        app:labelBehavior="floating" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Custom Range Selection Slider" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider_range_selection_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="Custom Range Selection Slider"
        android:labelFor="@+id/tv_result"
        android:stepSize="1"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:values="@array/initial_discrete_slider_values" />

</LinearLayout>